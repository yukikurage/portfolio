    "autoprefixer": "^10.3.4",
    "postcss": "^8.3.6",
    "purescript": "^0.14.4",
    "spago": "^0.20.3",
    "tailwindcss": "^2.2.14",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
